<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cart_element__product_image"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size"
        android:src="@color/cardview_dark_background"
        />
    <TextView
        android:layout_marginStart="75dp"
        android:layout_marginTop="@dimen/TopMarginListElement"
        android:id="@+id/cart_element__product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder name"
        />
    <TextView
        android:layout_marginStart="75dp"
        android:layout_marginTop="@dimen/TopMarginListElement"
        android:id="@+id/cart_element__product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        />
</LinearLayout>